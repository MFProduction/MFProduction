{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password |slice(0,20) }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary"  href="{{ path('admin_user') }}">
            Back to the list
    </a>
    <a class="btn btn-primary" href="{{ path('admin_user_edit', { 'id': entity.id }) }}">
    Edit
    </a>
    {{ form(delete_form) }}
{% endblock %}
