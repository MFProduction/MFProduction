{% extends '::base.html.twig' %}
{% block body %}
    <div class=" container container-login">
        <form class="form-signin" action="{{ path('login_check') }}" method="post" role="form">
            <h1 class="text-center">Login</h1>
                {% if error %}        
                    <div class="alert alert-danger">{{ error.message }} </div>
                {% endif %}
            <div class="form-group">
                <label for="username" class="sr-only">Username:</label>
                <input type="text" id="username" name="_username"  class="form-control" placeholder="username" required autofocus/>
                <br> 
                <label for="password" class="sr-only">Password:</label>
                <input  class="form-control"  type="password" id="password" name="_password" placeholder="password" />
                <br />
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </div>
        </form>
    </div>
{% endblock %}