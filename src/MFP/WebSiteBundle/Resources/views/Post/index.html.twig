{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post list</h1>
    <a class="btn btn-primary"href="{{ path('admin_post_new') }}">
                Create a new entry
            </a>
    <table class="records_list table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a class="btn btn-default" href="{{ path('admin_post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('admin_post_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('admin_post_edit', { 'id': entity.id }) }}">edit</a>
                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
